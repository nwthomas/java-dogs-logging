<?xml version = "1.0" encoding = "UTF-8"?>

<!--*** Part 1-->

<configuration>
    <!-- Appender for the console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%25.25class] [%thread] [%line] [%-5level] %m%n</pattern>
        </encoder>
    </appender>

    <!-- Appender for the File -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/tmp/var/logs/lambdajx.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd' 'HH:mm:ss.SSS}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/tmp/var/logs/lambdajx.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- Appender for Tomcat -->
    <appender name="TOMCAT" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/var/tmp/logs/myTomcatLog.log</File>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">

            <!-- rollover daily -->
            <fileNamePattern>/var/tmp/logs/myTomcatLog.%d{yyyy-MM-dd HH}.%i.txt</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>

            <!-- keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- STDOUT sends to the appender above which uses the ConsoleAppender -->
    <!-- Set INFO for minimum and TRACE for tons of logging -->
    <root level="INFO">
        <!-- Logs to the console -->
        <appender-ref ref="STDOUT"/>

        <!-- Logs to a file (shown up above) -->
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.apache.catalina" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.coyote" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>

    <logger name="org.apache.tomcat" level="OFF">
        <appender-ref ref="TOMCAT" />
        <appender-ref ref="STDOUT" />
    </logger>
</configuration>